<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="br.cefetmg.view.MenuInicialController">
    <stylesheets>
        <URL value="@/styles/menuinicial.css" />
    </stylesheets>
    <children>
        <GridPane layoutX="20.0" layoutY="26.0" prefHeight="374.0" prefWidth="542.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            </rowConstraints>
            <children>
                <Label fx:id="textBemVindo" text="Bem Vindo" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Button fx:id="FazerPedido" contentDisplay="TOP" mnemonicParsing="false" onAction="#FazerPedido" text="Fazer Pedido" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                <Button fx:id="CadastrarCliente" mnemonicParsing="false" onAction="#CadastrarCliente" text="Cadastrar Cliente" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                <Button fx:id="ListarCliente" mnemonicParsing="false" onAction="#ListarClientes" text="Listar Clientes" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />

                <Button fx:id="ListarFuncionario" mnemonicParsing="false" onAction="#ListarFuncionario" text="Listar Funcionario" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />

                <Button fx:id="ListarProdutos" mnemonicParsing="false" onAction="#ListarProdutos" text="Listar Produtos" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER" />

                <Button fx:id="ListarPedido" mnemonicParsing="false" onAction="#ListarPedidos" text="Listar Pedidos" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER" />

                <Button fx:id="CadastrarFuncionario" mnemonicParsing="false" onAction="#CadastrarFuncionario" text="Cadastrar Funcionário" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="CENTER" />

                <Button fx:id="GerarRelatório" mnemonicParsing="false" onAction="#GerarRelatorio" text="Gerar Relatório" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.valignment="CENTER" />

                <Button fx:id="CadastrarProduto" mnemonicParsing="false" onAction="#CadastrarProduto" text="Cadastar Produto" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="8" GridPane.valignment="CENTER" />

                                                                                                                                
                <Button mnemonicParsing="false" onAction="#Sair" text="Sair" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="9" GridPane.valignment="CENTER" />
            <Button fx:id="MenuEntrega" onAction="#MenuEntrega" mnemonicParsing="false" text="Entregas" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>
    </children>
