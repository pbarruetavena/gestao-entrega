<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.net.URL?>


<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="br.cefetmg.view.InicialEntregaController">
    <stylesheets>
        <URL value="@/styles/cadastrarproduto.css" />
    </stylesheets>
    <children>
        <ListView fx:id="pedidoListView" layoutX="30.0" layoutY="30.0" prefHeight="200.0" prefWidth="200.0" />
        <ListView fx:id="itensListView" layoutX="250.0" layoutY="30.0" prefHeight="150.0" prefWidth="200.0" visible="false" />
        
        <Label layoutX="250.0" layoutY="190.0" text="Valor Total:" />
        <TextField fx:id="valorTotalText" layoutX="320.0" layoutY="190.0" visible="false" />
        
        <Button fx:id="salvarButton" layoutX="250.0" layoutY="230.0" mnemonicParsing="false" text="Salvar" visible="false" />
        <Button fx:id="deletarButton" layoutX="320.0" layoutY="230.0" mnemonicParsing="false" text="Deletar" visible="false" />
        <Button fx:id="iniciarEntregaButton" layoutX="400.0" layoutY="230.0" mnemonicParsing="false" onAction="#iniciarEntrega" text="Iniciar Entrega" visible="false" />
        
        <Button fx:id="voltarButton" layoutX="30.0" layoutY="240.0" mnemonicParsing="false" onAction="#voltarTela" text="Voltar" />
    </children>
</AnchorPane>
